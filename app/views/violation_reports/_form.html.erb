<%= form_with(model: violation_report, class: "contents") do |form| %>
  <% if violation_report.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(violation_report.errors.count, "error") %> prohibited this violation_report from being saved:</h2>

      <ul class="list-disc ml-6">
        <% violation_report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :vehicle_count %>
    <%= form.number_field :vehicle_count, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": violation_report.errors[:vehicle_count].none?, "border-red-400 focus:outline-red-600": violation_report.errors[:vehicle_count].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": violation_report.errors[:latitude].none?, "border-red-400 focus:outline-red-600": violation_report.errors[:latitude].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": violation_report.errors[:longitude].none?, "border-red-400 focus:outline-red-600": violation_report.errors[:longitude].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
